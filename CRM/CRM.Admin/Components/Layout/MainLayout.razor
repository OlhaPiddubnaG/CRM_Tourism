@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1" Dense="@dense" Color="Color.Warning">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        <AppBar/>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" ClipMode="clipMode" Breakpoint="@breakpoint" PreserveOpenState="@preserveOpenState" Elevation="1" Variant="@DrawerVariant.Mini">
        @if (user != null)
        {
            if (isAdmin)
            {
                <AdminNavMenu/>
            }
            else
            {
                <NavMenu/>
            }
        }
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="content-container">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>