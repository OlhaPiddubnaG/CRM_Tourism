@page "/order/{Id}"

<MudGrid Style="margin-top: 20px">

    <MudItem xs="12" md="8">
        <MudText Style="margin: 10px" Typo="Typo.h5">Загальна інформація</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="3">
                        <MudDatePicker Variant="Variant.Outlined" DateFormat="dd-MM-yyyy" Label="Від" @bind-Date="_dateFrom"/>
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudDatePicker Variant="Variant.Outlined" DateFormat="dd-MM-yyyy" Label="До" @bind-Date="_dateTo"/>
                    </MudItem>
                    <MudSelect T="Guid" @bind-Value="_orderCreateDto.UserId" Label="Менеджер" Class="mb-5">
                        @foreach (var manager in _userDto)
                        {
                            <MudSelectItem Value="@manager.Id">@($"{manager.Name} {manager.Surname}")</MudSelectItem>
                        }
                    </MudSelect>
                    <MudTextField Class="mb-2" Label="Коментар" @bind-Value="_orderCreateDto.Comment" For="@(() => _orderCreateDto.Comment)" Lines="2"/>
                </MudGrid>
                <MudItem xs="12" md="2">
                    <MudTextField Class="mb-2" Label="Кількість ночей" @bind-Value="_orderCreateDto.NumberOfNights" For="@(() => _orderCreateDto.NumberOfNights)" T="int" />
                </MudItem> 
                <MudItem xs="12" md="2">
                    <MudTextField Class="mb-2" Label="suma" @bind-Value="_orderCreateDto.Amount" For="@(() => _orderCreateDto.Amount)" T="decimal" />
                </MudItem>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="8">
        <MudText Style="margin: 20px" Typo="Typo.h5">Інформація по туристам</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="3">
                        <MudSelect @bind-Value="selectedAdult" Label="Дорослі">
                            <MudSelectItem Value="1">1</MudSelectItem>
                            <MudSelectItem Value="2">2</MudSelectItem>
                            <MudSelectItem Value="3">3</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudSelect @bind-Value="selectedKid" Label="Діти">
                            <MudSelectItem Value="0">0</MudSelectItem>
                            <MudSelectItem Value="1">1</MudSelectItem>
                            <MudSelectItem Value="2">2</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12">
                        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.PlaylistAdd" Class="mt-2">Обрати туриста</MudButton>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="8">
        <MudText Style="margin: 10px" Typo="Typo.h5">Інформація по проживанню</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Class="mt-2">Додати проживання</MudButton>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="8">
        <MudText Style="margin: 10px" Typo="Typo.h5">Інформація по транспорту</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect @bind-Value="selectedTransport" Label="Вид транспорту">
                            <MudSelectItem Value="1">1</MudSelectItem>
                            <MudSelectItem Value="2">2</MudSelectItem>
                            <MudSelectItem Value="3">3</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="8">
        <MudText Style="margin: 10px" Typo="Typo.h5">Інші послуги</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Class="mt-2">Додати послугу</MudButton>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="8">
        <MudText Style="margin: 10px" Typo="Typo.h5">Фінансова інформація</MudText>
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudButton Variant="Variant.Filled" Class="mt-2">Оплата туриста</MudButton>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudButton Variant="Variant.Filled" Class="mt-2">Наші витрати</MudButton>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudButton
        Variant="Variant.Filled"
        OnClick="CreateOrder"
        StartIcon="@Icons.Material.Filled.AddCircleOutline"
        Class="buttonBase">
        СТВОРИТИ
    </MudButton>
</MudGrid>

