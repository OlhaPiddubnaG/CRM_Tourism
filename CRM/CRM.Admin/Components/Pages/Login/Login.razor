@layout CenteredCardLayout
@page "/"
@using CRM.Admin.Components.Layout

<MudCard>
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.overline" Style="display: block; text-align: center;">ВХІД В "AWESOME TOURISM CRM"</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudInput T="string" Placeholder="Ваш Email" Label="Email" Immediate="true" Variant="Variant.Outlined" @bind-Value="@_email" InputType="InputType.Email" Class="my-custom-input"/>
        </MudItem>
        <MudItem xs="12">
            <MudInput T="string" Placeholder="Пароль" Label="Пароль" Immediate="true" Variant="Variant.Outlined" @bind-Value="@_password" InputType="InputType.Password" Class="my-custom-input"/>
        </MudItem>
        <MudItem xs="12">
            <MudButton OnClick="LogIn" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Filled.Login" Class="button-forLogin">
                ВХІД
            </MudButton>
        </MudItem>
        <MudItem xs="12">
            <MudLink Class="ml-auto" Href="/ForgotPassword">Забули пароль?</MudLink>
        </MudItem>
        @if (!string.IsNullOrEmpty(_message))
        {
            <MudItem xs="12">
                <MudAlert Severity="_alertSeverity">@_message</MudAlert>
            </MudItem>
        }
    </MudGrid>
</MudCard>
