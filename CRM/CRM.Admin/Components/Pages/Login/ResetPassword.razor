@layout CenteredCardLayout
@page "/resetPassword"
@using CRM.Admin.Components.Layout

<MudCard>
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h3" Style="display: block; text-align: center;">ЗМІНА ПАРОЛЯ</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudInput T="string" Placeholder="Новий пароль" Label="Новий пароль" Immediate="true" Variant="Variant.Outlined" @bind-Value="@_newPassword" InputType="InputType.Password" Class="my-custom-input"/>
        </MudItem>
        <MudItem xs="12">
            <MudInput T="string" Placeholder="Введіть повторно" Label="Підтвердження пароля" Immediate="true" Variant="Variant.Outlined" @bind-Value="@_confirmPassword" InputType="InputType.Password" Class="my-custom-input"/>
        </MudItem>
        <MudItem xs="12">
            <MudButton OnClick="ChangePassword" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Filled.Login" Style="width: 100%; height: 56px; background-color: #ff5722; color: white;">ЗМІНИТИ ПАРОЛЬ</MudButton>
        </MudItem>
    </MudGrid>
</MudCard>
@if (!string.IsNullOrEmpty(_message))
{
    <MudAlert Severity="_alertSeverity" OnClose="ClearMessage">@_message</MudAlert>
}