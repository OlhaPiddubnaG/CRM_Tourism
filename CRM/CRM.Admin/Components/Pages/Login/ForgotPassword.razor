@layout CenteredCardLayout
@page "/forgotPassword"
@using CRM.Admin.Components.Layout

<MudCard>
    <MudGrid>
        <MudItem xs="12">
            <MudText Align="Align.Center" Typo="Typo.h3" Style="display: block; text-align: center;">Забули пароль?</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudInput T="string" Placeholder="Ваш Email" Label="Email" Immediate="true" Variant="Variant.Outlined" @bind-Value="@_email" InputType="InputType.Email" Class="my-custom-input"/>
        </MudItem>
        <MudItem xs="12">
            <MudButton OnClick="ResetPassword" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Filled.Login" Style="width: 100%; height: 56px; background-color: #ff5722; color: white;">СКИНУТИ ПАРОЛЬ</MudButton>
        </MudItem>
    </MudGrid>
</MudCard>
@if (!string.IsNullOrEmpty(_message))
{
    <MudAlert Severity="_alertSeverity" OnClose="ClearMessage">@_message</MudAlert>
}

