@layout CenteredCardLayout
@page "/"
@using CRM.Admin.Components.Layout
@inject NavigationManager NavigationManager

<EditForm Model="@user" OnValidSubmit="ValidateUser">
    <DataAnnotationsValidator/>
    <MudCardContent Class="pb-0">
        <MudTextField Label="Email" Id="Email" Required="true" Variant="Variant.Outlined" @bind-Value="user.Email" For="@(() => user.Email)"
                      Immediate="true" InputType="InputType.Email"/>
        <br/>
        <MudTextField Label="Password" Id="Password" Required="true" Variant="Variant.Outlined" @bind-Value="user.Password" For="@(() => user.Password)"
                      Immediate="true" InputType="InputType.Password"/>
    </MudCardContent>
    <br/>
    <div>
        <MudCardActions>
            <MudLink Class="ml-auto" Href="/ForgotPassword">I forgot password</MudLink>
        </MudCardActions>
    </div>
    <div>
        <MudCardActions Class="d-flex">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Size="Size.Large" EndIcon="@Icons.Material.Filled.Login" Style="width: 100%; height: 56px">Log in</MudButton>
        </MudCardActions>
    </div>
</EditForm>
