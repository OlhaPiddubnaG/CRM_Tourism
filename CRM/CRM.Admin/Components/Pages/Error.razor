@page "/Error"

<MudItem xs="10" Class="ma-auto pt-10 border" Style="width: 800px; height: 450px; border: 20px solid;  margin-top: 600px;">
    <MudGrid>
        <MudItem Class="d-flex justify-center align-center" xs="7" Style="padding-top:20px; padding-right:2px">
            <MudImage Src="bootstrap/error.jpg" Width="300" Height="300" Class="rounded-lg"/>
        </MudItem>
        <MudItem xs="5">
            <MudCard Elevation="0" Class="mt-10 mb-10">
                <MudText Typo="Typo.h2" Color="Color.Error">Error</MudText>
                <MudText Typo="Typo.h4" Color="Color.Error">Під час обробки вашого запиту сталася помилка. Перевірте дані і повторіть знову.</MudText>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudItem>