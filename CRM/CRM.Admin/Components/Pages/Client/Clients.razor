@page "/client"
@using CRM.Admin.Data.ClientDTO
@using CRM.Domain.Enums
<MudTable ServerData="@(new Func<TableState, Task<TableData<ClientDTO>>>(ServerReload))"
          Dense="true" Hover="true" @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Туристи</MudText>
        <MudSpacer/>
        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0">
        </MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortLabel="name_field" T="ClientDTO">Ім`я та прізвище</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="phone_field" T="ClientDTO">Телефон</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="manager_field" T="ClientDTO">Менеджер</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="status_field" T="ClientDTO">Статус</MudTableSortLabel>
        </MudTh>
        <MudTh Class="d-flex justify-end">
            <MudTableSortLabel SortLabel="tools_field" T="ClientDTO">Інструменти</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Ім'я та Прізвище">
            <MudLink Href=@($"clientById/{context.Id}") Underline="Underline.None" Color="Color.Dark">
                @($"{context.Name} {context.Surname}")
            </MudLink>
        </MudTd>
        <MudTd DataLabel="Телефон">@context.Phone</MudTd>
        <MudTd DataLabel="Менеджери">
            @foreach (var managerName in context.ManagerNames)
            {
                <div>@managerName</div>
            }
        </MudTd>
        <MudTd DataLabel="Статус">@context.LatestStatus?.ToString()</MudTd>
        <MudTd DataLabel="Дія" Class="d-flex justify-end">
            <MudTooltip Text="Додати коментар">
                <MudIconButton OnClick="() => AddComment(context.Id)" Icon="@Icons.Material.Outlined.Comment" Color="Color.Dark"/>
            </MudTooltip>
            <MudTooltip Text="Призначити менеджера">
                <MudIconButton OnClick="() => AddManager(context.Id)" Icon="@Icons.Material.Outlined.PeopleOutline" Color="Color.Dark"/>
            </MudTooltip>
            <MudTooltip Text="Змінити статус">
                <MudIconButton OnClick="() => AddStatus(context.Id)" Icon="@Icons.Material.Outlined.StarBorder" Color="@(context.LatestStatus == ClientStatus.Closed ? Color.Error : Color.Dark)"/>
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager/>
    </PagerContent>
</MudTable>
