<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6"> Додавання закладу проживання</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudTextField Class="mb-2" Label="Назва" @bind-Value="_hotelCreateDto.Name" For="@(() => _hotelCreateDto.Name)"/>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudAutocomplete T="Guid" Label="Тип номеру"
                                 @bind-Value="_hotelCreateDto.RoomTypeId"
                                 AdornmentIcon="@Icons.Material.Filled.Add"
                                 OnAdornmentClick="AddRoomType"
                                 SearchFunc="SearchRoomType"
                                 ToStringFunc="GetRoomTypeName"/>
            </MudItem>
            <MudItem xs="12">
                <MudTextField Class="mb-2" Label="Коментар до проживання" @bind-Value="_hotelCreateDto.Comment" For="@(() => _hotelCreateDto.Comment)"/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Error" StartIcon="@Icons.Material.Filled.Cancel">ВІДМІНА</MudButton>
        <MudSpacer/>
        <MudButton OnClick="Create" Variant="Variant.Filled" Class="buttonBase" StartIcon="@Icons.Material.Filled.Save">ЗБЕРЕГТИ</MudButton>
    </DialogActions>
</MudDialog>