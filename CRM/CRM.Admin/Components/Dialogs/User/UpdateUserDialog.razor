@using CRM.Domain.Enums
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Редагування</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Class="mb-2" Label="Iм'я" @bind-Value="_userUpdateDto.Name" For="@(() => _userUpdateDto.Name)" Lines="2"/>
        <MudTextField Class="mb-5" Label="Прізвище" @bind-Value="_userUpdateDto.Surname" For="@(() => _userUpdateDto.Surname)" Lines="2"/>
        <MudSelect T="RoleType" @bind-SelectedValues="_userUpdateDto.RoleTypes" Label="Роль" MultiSelection="true" Class="mb-5" Lines="2">
            @foreach (RoleType role in Enum.GetValues(typeof(RoleType)).Cast<RoleType>().Where(r => r != RoleType.Admin))
            {
                <MudSelectItem Value="role">@role.ToString()</MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Error" StartIcon="@Icons.Material.Filled.Cancel">ВІДМІНА</MudButton>
        <MudSpacer/>
        <MudButton Variant="Variant.Filled" OnClick="Update" Class="buttonBase" StartIcon="@Icons.Material.Filled.Save">ЗБЕРЕГТИ</MudButton>
    </DialogActions>
</MudDialog>