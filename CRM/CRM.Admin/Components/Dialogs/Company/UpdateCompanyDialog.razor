<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Редагування</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Class="mb-2" Label="Назва" @bind-Value="CompanyUpdateDto.Name" For="@(() => CompanyUpdateDto.Name)" Lines="2"/>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Error" StartIcon="@Icons.Material.Filled.Cancel">ВІДМІНА</MudButton>
        <MudSpacer/>
        <MudButton OnClick="Update" Variant="Variant.Filled" Class="buttonBase" StartIcon="@Icons.Material.Filled.Save">ЗБЕРЕГТИ</MudButton>
    </DialogActions>
</MudDialog>